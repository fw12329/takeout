.category-container{
  position:absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top:0;
  background-color: rgb(238, 235, 235);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}
.category-header{
  width: 400px;
  height: 50px;
  background-color: white;
  padding: 10px;
  box-sizing: border-box;
}
.category-header-search{
  width: 200px;
  height: 100%;
  background-color: lightblue;
  border-radius: 20px;
  padding-left: 12px;
  box-sizing: border-box;
  font-size: 12px;
  
}
.search-btn{
  width: 200px;
  float:right;
}
.center{
  text-align: center;
  font-size: 13px;
}
.seller_list{
  display: flex;
  flex-wrap: wrap;
  padding-left: 4.5px;

}
.seller{
  height: 100px;
  width: 300px;
  background-color: white;
  margin-bottom: 10px; 
  border-radius: 10px;
  padding-left: 10px;
}


.seller_image{
  
  height: 89%;
  width: 34%;
  align-items: center;
  border-radius: 5px;
  margin-top: 7px;

}
.seller_info {
  flex: 1;
  padding-left: 12px;
  font-size: 20px;
  font-weight: bold;
  padding-top: -10px;
  line-height:10px;
}