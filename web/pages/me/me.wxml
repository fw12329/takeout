<view class="background" wx:if="{{is_login}}">
  <view class="padding" style="margin-left: -15px;display: flex;">
    <view class="cu-avatar xl round margin-left" style="background-image:url(/pages/images/丁真.png);width: 80px;height: 80px;"></view>
    <view class="text-xl padding">
        <text class="text-black text-bold" style="font-size: 18px;">{{username}}</text>
        <text class="text-black " style="font-size: 15px;display: block;margin-top: 5px;">{{number}}</text>
    </view>
  </view>
  <view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的订单</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的评价</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的地址</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的收藏</text>
    </view>
  </view>
</view>

<button bindtap="logout" style="margin-top: 100px;">退出账号</button>
</view>


<view class="background" wx:else="{{!is_login}}">
  <view class="padding" style="margin-left: -15px;display: flex;">
    <view class="cu-avatar xl round margin-left" style="background-image:url(/pages/images/丁真.png);width: 80px;height: 80px;"></view>
    <view class="text-xl padding" style="margin-top: 15px;">
        <text class="text-black text-bold" style="font-size: 20px;" bindtap="login">登录/注册</text>
    </view>
  </view>
  <view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的订单</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的评价</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的地址</text>
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view class="content">
      <text class="cuIcon-circlefill text-grey"></text>
      <text class="text-grey">我的收藏</text>
    </view>
  </view>
</view>
</view>



